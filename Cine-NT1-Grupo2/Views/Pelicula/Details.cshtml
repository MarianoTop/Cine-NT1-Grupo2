@model Cine_NT1_Grupo2.Models.Pelicula

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pelicula</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Calificacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calificacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
    </dl>
</div>

@if (User.IsInRole(nameof(Rol.ADMIN)))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar pelicula</a> |
        <a asp-action="Index">Volver</a>
    </div>

}
else
{
    <div>
        <a asp-action="Index">Volver</a>
    </div>
}

