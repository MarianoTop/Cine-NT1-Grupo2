@model IEnumerable<Cine_NT1_Grupo2.Models.Pelicula>

@{
    ViewData["Title"] = "Inicio";
}

<h1>Películas en Cartelera</h1>

<p>
    @if (User.IsInRole(nameof(Rol.ADMIN))) // solo permite que el usuario ADMINSTRADOR tenga acceso a loc omandos de Funcion
    {
        <a asp-action="Create">Agregar Nueva Pelicula</a>

    }

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>


                @if (User.IsInRole(nameof(Rol.ADMIN))) // solo permite que el usuario ADMINSTRADOR tenga acceso a loc omandos de Funcion
                {
                    <td>
                        <a class="btn btn-light" role="button" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a class="btn btn-light" role="button" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                }
                else
                {
                    <td>
                        <a class="btn btn-light" role="button" asp-action="Details" asp-route-id="@item.Id">Detalles</a> 
                    </td>
                }




            </tr>
        }
    </tbody>
</table>
